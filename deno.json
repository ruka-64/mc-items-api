{
  "imports": {
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@types/jsdom": "npm:@types/jsdom@^27.0.0",
    "hono": "jsr:@hono/hono@^4.9.10",
    "jsdom": "npm:jsdom@^27.0.0"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env --unstable-kv main.ts",
    "dev": "deno run --allow-net --allow-read --allow-env --watch --unstable-kv main.ts"
  },
  "compilerOptions": {
    "lib": ["esnext", "deno.window", "deno.unstable"],
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "nodeModulesDir": "manual"
}
